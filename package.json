    "ncu": "npx npm-check-updates --deep"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.12.1"
  },
  "dependencies": {}
}
